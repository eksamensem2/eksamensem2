---
import Layout from "../layouts/Layout.astro";
import Review from "../components/Review.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Some1 from "../../public/image/some1.webp";
import Some2 from "../../public/image/some2.webp";
import Some3 from "../../public/image/some3.webp";
import Some4 from "../../public/image/some4.webp";
import HeroForside from "../../public/image/heroForside.webp";
import Karrusel from "../components/Karrusel.astro";
import Keramikkensrejse from "../components/KeramikkensRejse.astro";
import Collageinspi from "../components/Collageinspi.astro";
import Billedegalleri from "../components/Billedegalleri.astro";

import { Image } from "astro:assets";
import KeramikkensRejse from "../components/KeramikkensRejse.astro";
---

<Layout>
  <Header />
  <section class="hero">
    <!-- <Image src={HeroForside} alt="hænder" /> -->
    <h2 class="h1">SIDSES KERAMIK</h2>

    <p class="subheadline ">
      Hver nuance en historie - Sidses håndlavede keramik til dig
    </p>
  </section>

  <section class="grid_2-1">
    <div class="grønBG">
      <p class="text1 pcenter">
        Velkommen til Sidses Keramik – her mødes håndværk og æstetik i unikke,
        håndlavede produkter. Inspireret af naturens farver og former skaber
        Sidse keramik med sjæl og personlighed, der bringer glæde til hverdagen.
        Udforsk kollektionerne og find det perfekte match til dit hjem.
      </p>
      <a class="button" href="">Se produkter</a>
    </div>

    <div class="hide">
      <img src="../../public/image/forside2.webp" alt="" />
    </div>
  </section>

  <section class="karrusel">
    <Karrusel />
  </section>

  <section class="hide keramikkensrejse">
    <KeramikkensRejse />
  </section>

  <Review/>

  <section>
    <Billedegalleri/>
  </section>

  <h2 class="h2">Følg med på instagram</h2>
  <section class="grid_2 grid_5">
    <div class="container">
      <Image class="image" src={Some1} alt="hænder" />
