<Footer />

<style>
  .container:hover .image {
    opacity: 0.3;
  }

  .container:hover .middle {
    opacity: 1;
  }

  .image {
    opacity: 1;
    display: block;
    width: 100%;
    height: auto;
    transition: 0.5s ease;
    backface-visibility: hidden;
  }

  .middle {
    transition: 0.5s ease;
    opacity: 0;
    position: absolute;
    /* width: 100%;
    height: auto; */
    /* top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    text-align: center; */
  }

  .instalogo {
    color: white;
    padding: 0;
  }

  .grid_2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6px;
  }

  .h2 {
    text-align: center;
  }

  .h1{
    padding: 30px 10px 0 15px;
  }

  .subheadline{
    padding: 0 0 0 15px;
  }

  main {
    max-width: 428px;
  }

  img {
    width: 100%;
    height: auto;
  }

  .text1 {
    padding: 20px 10px;
  }

  .hero {
    background-image: url("../../public/image/heroForside.webp");
    background-size: cover;
    background-position: center center;
    width: 100%;
    height: 555px;
  }

  .grønBG {
    text-align: center;
    padding: 10px;
    background-color: var(--accent-green-clr)
  }

  .button{
    margin:30px;
  }

  @media (max-width: 600px) {
    .hide {
      display: none;
    }
    .hero {
      width: 100%;
      height: 200px;
    }
  }

  @media (min-width: 600px) {
    .grid_5 {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
    }
    .grid_2-1 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 0;
    }
  
  }
</style>
