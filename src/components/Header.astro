---
import '../style/style.css';
import logo from "../../public/image/logo.svg";
import Image from 'astro/components/Image.astro';
import sog from "../../public/image/sog.svg";
import hjerte from "../../public/image/hjerte_header.svg";
import kurv from "../../public/image/kurv.svg"
---

<header>
  <div class="logo">
    <a href="/">
      <Image class="image" src={logo} alt="Logo" />
    </a>
  </div>
  
  

  <!--Navigation -->
  <nav class="navbar">
    <div class="nav-links">
      <ul class="menu">
        <li><a href="kollektioner">Keramik</a></li>
        <li><a href="kollektion">Kollektion</a></li>
        <li><a href="ommig">Om mig</a></li>
      </ul>
    </div>

    <!-- Ikoner -->
    <div class="icons">  
      <a href="/search"><Image class="image" src={sog} alt="søge"/> </a>
      <a href="/favorites"><Image class="image" src={hjerte} alt="hjerte"/> </a>
      <a href="/cart"><Image class="image" src={kurv} alt="kurv"/></a>
    </div>

    <!-- Burger menu -->
    <div class="burger-menu" id="burger-menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>
  </nav>
</header>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Arial', sans-serif;
    background-color: #fdf9f4;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 30px;
    background-color: #fdf9f4;
  
  }

  .logo img {
    height: 60px;
  }
  .navbar {
    display: flex;
    justify-content: space-between;
    width: 100%;
    align-items: left;
  }

  .nav-links {
    flex: 1;
    display: flex;
    justify-content: center; 
  }

  .menu {
    list-style: none;
    display: flex;
    gap: 20px;
  }

  .menu a {
    text-decoration: none;
    color: #4a3c39;
    font-size: 16px;
  }


  .icons {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .icons img {
    height: 24px;
    margin-left: 15px;
  }

  /* Burger menu styling */
  .burger-menu {
    display: none;
    flex-direction: column;
    cursor: pointer;
    gap: 5px;
  }

  .burger-menu .bar {
    width: 25px;
    height: 3px;
    background-color: #4a3c39;
  }
  /* Hover-effekt for navigation */
.menu a {
  text-decoration: none;
  color: #4a3c39;
  font-size: 16px;
  transition: color 0.3s ease, text-shadow 0.3s ease;
}
/* Navigation styling */
.menu a {
  text-decoration: none;
  color: #4a3c39; /* Mørkebrun normal farve */
  font-size: 16px;
}

.menu a:hover {
  color: #ab7967; /* Lysebrun hover-farve */
}

/* Ikoner (Favorit og Kurv) styling */
.icons a {
  text-decoration: none;
  color: #4a3c39; /* Mørkebrun normal farve */
}

.icons a:hover {
  color: #ab7967; /* Lysebrun hover-farve */
}

/* Ikon-billeder */
.icons img {
  height: 24px;
}

/* Hover-effekt på ikoner (uden transition) */
.icons a:hover img {
  filter: brightness(1.2); /* Let lysere effekt på billedet */
}

  @media (max-width: 768px) {
    .menu {
      display: none;
      width: 100%;
      background-color: #fdf9f4;
      position: absolute;
      top: 60px;
      left: 0;
      padding: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      flex-direction: column;
      justify-content: center; 
      align-items: center; 
    }

    .burger-menu {
      display: flex; 
    }

    .menu.active {
      display: flex; 
    }

    .menu a {
      font-size: 18px;
      padding: 10px;
      color: #4a3c39;
    }

    .icons {
      display: none; 
    }
  }
</style>

<script>
  //@ts-nocheck
 
  const burgerMenu = document.getElementById('burger-menu');
  const menu = document.querySelector('.menu');


  burgerMenu.addEventListener('click', () => {
    menu.classList.toggle('active');
  });
</script>
