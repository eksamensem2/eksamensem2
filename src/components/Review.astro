---
import Image from 'astro/components/Image.astro';
import trustpilot from "../../public/image/trustpilot.svg";
import femstjerner from "../../public/image/femstjerner.svg";



// Hvis du har et array af anmeldelser
const reviews = [
  { name: "Ella-my", text: "\"Skålen er blevet min favorit i køkkenet. Den er både praktisk og virkelig smuk at have stående.\"" },
  { name: "Carl-William", text: "\"Keramikken er lige, hvad jeg ledte efter – naturligt, smukt og med så mange fine detaljer.\"" },
  { name: "Sara-Li", text: "\"Koppen er blevet min favorit til morgenkaffe. Den har sådan en dejlig personlighed og varme.\"" },
  { name: "Erik", text: "\"Fantastisk kvalitet og utrolig smukke detaljer. Jeg elsker at bruge dem hver dag.\"" },
  { name: "Lotte", text: "\"Utroligt håndværk! Det gør hverdagen lidt smukkere at bruge disse keramikstykker.\"" },
  { name: "Mads", text: "\"Skåle og tallerkener, som er perfekte til både hverdag og fest. Smukke og funktionelle!\"" },
  { name: "Emma", text: "\"Skålen er blevet min favorit i køkkenet. Den er både praktisk og virkelig smuk at have stående.\"" },
  { name: "Jens Peter", text: "\"Keramikken er lige, hvad jeg ledte efter – naturligt, smukt og med så mange fine detaljer.\"" },

];

---

<style>
  .slider-container {
    overflow: hidden;
    width: 100%; /* Tilpas bredde efter behov */
    position: relative;
    background-color: var(--accent-green-clr);
    padding: 80px 0;
  }

  .slider {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .card {
    min-width: 25%; /* Viser 4 kort ad gangen */
    box-sizing: border-box;
    border-radius: 1px;
    background: var(--primaer-clr);
    padding: 16px;
    margin: 0 10px;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    display: inline-flex;
    padding: 35px 40px;
    flex-direction: column;
    align-items: flex-start;
    gap: 29px;
    
  }

  h3 {
    margin: 0;
    font-size: var(--fs-l);
    color: var(--tridaer-clr);  
}
p{
font-size: var(--fs-xxs);;
color: var(--text-clr);  
font-family: var(--ff-mainspeciel);

}
.enlinje{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
  
.enlinje h3 {
  margin-right: 35px; /* Tilføjer afstand mellem overskriften og billedet */
}

.enlinje img {
  margin-left: auto; /* Skubber billedet helt til højre */
}

@media (max-width: 600px) {
    .hide {
      display: none;
    }


</style>

<div class="slider-container hide">
  <div class="slider" id="slider">
    {reviews.map((review) => (
      <div class="card">
        <div class="enlinje"><h3>{review.name}</h3> <Image class="image" src={femstjerner} alt="fem stjerner"/></div>
        <p>{review.text}</p>
        <Image class="image" src={trustpilot} alt="trustpilot"/>
      </div>
    ))}
  </div>
</div>

<script>
  if (typeof window !== "undefined") {
    window.addEventListener("load", () => {
      const slider = document.getElementById("slider");

      if (!slider) {
        console.error("Elementet 'slider' blev ikke fundet i DOM'en.");
        return;
      }

      const reviewsLength = 6; // Antal reviews
      let currentIndex = 0;

      function moveSlider() {
        currentIndex++;
        if (currentIndex > reviewsLength - 4) {
          currentIndex = 0; // Start forfra
        }
        slider.style.transform = `translateX(-${currentIndex * 25}%)`;
      }

      setInterval(moveSlider, 3000); // Flyt hvert 3. sekund
    });
  }
</script>
