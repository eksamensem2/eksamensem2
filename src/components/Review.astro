---

<style>
  .slider-container {
    overflow: hidden;
    width: 100%; /* Tilpas bredde efter behov */
    position: relative;
    background-color: #d0d4b5;
    padding: 80px 0;
  }

  .slider {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .card {
    min-width: 25%; /* Viser 4 kort ad gangen */
    box-sizing: border-box;
    background: #fff;
    border-radius: 8px;
    padding: 16px;
    margin: 0 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  h3 {
    margin: 0;
    font-size: var(--fs-l);
    color: var(--tridaer-clr);  
}
p{
font-size: var(--fs-xxs);;
}
  

@media (max-width: 600px) {
    .hide {
      display: none;
    }


</style>

<div class="slider-container">
  <div class="slider" id="slider">
    {reviews.map((review) => (
      <div class="card">
        <h3>{review.name}</h3>
        <p>{review.text}</p>
      </div>
    ))}
  </div>
</div>

<script>
  if (typeof window !== "undefined") {
    window.addEventListener("load", () => {
      const slider = document.getElementById("slider");

      if (!slider) {
        console.error("Elementet 'slider' blev ikke fundet i DOM'en.");
        return;
      }

      const reviewsLength = 6; // Antal reviews
      let currentIndex = 0;

      function moveSlider() {
        currentIndex++;
        if (currentIndex > reviewsLength - 4) {
          currentIndex = 0; // Start forfra
        }
        slider.style.transform = `translateX(-${currentIndex * 25}%)`;
      }

      setInterval(moveSlider, 3000); // Flyt hvert 3. sekund
    });
  }
</script>
