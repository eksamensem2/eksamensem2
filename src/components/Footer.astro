---
import logo from "../../public/image/logo.svg";
import Image from 'astro/components/Image.astro';
import insta from "../../public/image/insta.svg";
import tiktok from "../../public/image/tiktok.svg";
import Mail from "../../public/image/Mail.svg";
import Mobil from "../../public/image/Mobil.svg";
import Person from "../../public/image/Person.svg";
---

<footer class="footer">
  <!-- Venstre Sektion om Sidses Keramik-->
  <div class="footer-section">
    <h3>Sidses Keramik</h3>
    <p>
      Håndplukket unika keramik. Jeg gør mig umage med at udvælge ler, der er holdbart
      til hverdagens brug, og lægger vægt på minimalistisk design.
    </p>
  </div>

  <!-- Midtersektion Logo -->
  <div class="footer-logo footer-section">
    <Image class="image" src={logo} alt="logo"/> 
    <p class="midtertekst">Alle rettigheder forbeholdt Sidses keramik ©2024. Sidses keramik · Skytten 3 · 7100 Vejle</p> 
  </div>


  <!-- Højre Sektion - Kontakt -->
  <div class="footer-section">
    <h3>Kontakt</h3>
    <p>
      <Image class="image" src={Person} alt="logo" width="24" height="24"/>
      Sidse Snedevinde Sørensen
    </p>
    <p>
      <Image class="image" src={Mail} alt="logo" width="24" height="24"/>
      <a href="mailto:sidseskeramik@gmail.com">sidseskeramik@gmail.com</a>
    </p>
    <p>
      <Image class="image" src={Mobil} alt="logo" width="24" height="24"/>
      <a href="tel:+4526754006">+45 26754006</a>
    </p>
    <div class="icons">
    <a href="#" aria-label="TikTok">
      <Image class="image" src={insta} alt="logo" width="24" height="24"/>  
      
    </a>
    <a href="#" aria-label="Instagram">
      <Image class="image" src={tiktok} alt="logo" width="24" height="24"/>  
    </div>
  </div>
</footer>
<style>
  .footer {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    background-color: #CFC6B9; /* Ensartet baggrund */
    color: #735E50;
  }

  /* Sektioner i footer */
  .footer-section {
    padding: 6rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .footer-section a {
    text-decoration: none;
    color: inherit;
    line-height: 2.5rem;
  }

  .footer-section p {
    text-decoration: none;
    color: inherit;
    line-height: 2.5rem; /* Ens linjeafstand for kontaktsektionen */
    display: flex;
    align-items: center; /* Justerer ikoner og tekst på samme linje */
    gap: 1rem; /* Ensartet afstand mellem ikon og tekst */
  }

  .footer-section a:hover {
    color: #ab7967;
    text-decoration: underline;
  }

  /* Midtersektionen */
  .footer-logo {
    justify-content: center;
    align-items: center;
  }

  .footer-logo .image {
    width: 80px;
    margin-bottom: -1.5rem; /* Justerer placeringen tættere på teksten */
  }

  .footer-logo p {
    font-size: 0.9rem;
    text-align: center;
    line-height: 1.5rem;
  }

  h3 {
    text-align: left;
  }

  /* SoMe-ikoner */
  .icons {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .icons a {
    display: inline-block;
  }
  .midtertekst{
    margin-bottom: -4rem;
  }

  /* Responsiv styling */
  @media (max-width: 768px) {
    .footer {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .footer-section {
      height: auto;
      align-items: center;
    }

    .footer-section p {
      text-align: center;
    }

    .footer-logo {
      grid-column: 1;
    }

    .icons {
      justify-content: center;
    }
  }
</style>
