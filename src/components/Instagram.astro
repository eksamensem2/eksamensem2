---
import Some1 from "/public/image/some1.webp";
import Some2 from "/public/image/some2.webp";
import Some3 from "/public/image/some3.webp";
import Some4 from "/public/image/some4.webp";
import { Image } from "astro:assets";
---

<h2 class="h2">Følg med på instagram</h2>
<section class="grid_2 grid_5">
  <div class="container">
    <Image class="image" src={Some1} alt="hænder" />
    <div class="middle">
      <div class="instalogo">
        <img src="../../public/image/insta.svg" alt="unda.webp" />
      </div>
    </div>
  </div>
  <div class="container">
    <Image class="image" src={Some2} alt="hænder" />
    <div class="middle">
      <div class="instalogo">
        <img src="../../public/image/insta.svg" alt="unda.webp" />
      </div>
    </div>
  </div>
  <div class="container">
    <Image class="image" src={Some3} alt="hænder" />
    <div class="middle">
      <div class="instalogo">
        <img src="../../public/image/insta.svg" alt="unda.webp" />
      </div>
    </div>
  </div>
  <div class="container">
    <Image class="image" src={Some4} alt="hænder" />
    <div class="middle">
      <div class="instalogo">
        <img src="../../public/image/insta.svg" alt="unda.webp" />
      </div>
    </div>
  </div>
  <div class="container">
    <Image class="hide image" src={Some1} alt="hænder" />
    <div class="middle">
      <div class="instalogo">
        <img src="../../public/image/insta.svg" alt="unda.webp" />
      </div>
    </div>
  </div>
  <div class="container">
    <Image class="hide image" src={Some2} alt="hænder" />
    <div class="middle">
      <div class="instalogo">
        <img src="../../public/image/insta.svg" alt="unda.webp" />
      </div>
    </div>
  </div>

  <div class="container">
    <Image class="hide image" src={Some3} alt="hænder" />
    <div class="middle">
      <div class="instalogo">
        <img src="../../public/image/insta.svg" alt="unda.webp" />
      </div>
    </div>
  </div>

  <div class="container">
    <Image class="hide image" src={Some4} alt="hænder" />
    <div class="middle">
      <div class="instalogo">
        <img src="../../public/image/insta.svg" alt="unda.webp" />
      </div>
    </div>
  </div>
  <div class="container">
    <Image class="hide image" src={Some1} alt="hænder" />
    <div class="middle">
      <div class="instalogo">
        <img src="../../public/image/insta.svg" alt="unda.webp" />
      </div>
    </div>
  </div>

  <div class="container">
    <Image class="hide image" src={Some2} alt="hænder" />
    <div class="middle">
      <div class="instalogo">
        <img src="../../public/image/insta.svg" alt="unda.webp" />
      </div>
    </div>
  </div>
</section>

<style>
  .container {
    position: relative; /* Tilføj denne */
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .container:hover .image {
    opacity: 0.3;
  }

  .container:hover .middle {
    opacity: 1;
  }

  .image {
    opacity: 1;
    display: block;
    width: 100%;
    height: 100%;
    transition: 0.5s ease;
    backface-visibility: hidden;
  }

  .h2 {
    text-align: center;
    padding: 50px 0 0 0;
    margin-bottom: 30px;
  }

  .grid_2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6px;
    padding: 0 20px;
  }
  .middle {
    opacity: 0;
    position: absolute; /* Sørger for, at den ligger ovenpå billedet */
    top: 50%; /* Centrerer vertikalt */
    left: 50%; /* Centrerer horisontalt */
    transform: translate(-50%, -50%); /* Centrerer perfekt */
    transition: opacity 0.5s ease; /* Gør overgangen smooth */
  }

  .instalogo {
    color: white;
    padding: 0;
  }

  @media (max-width: 600px) {
    .hide {
      display: none;
    }
  }

  @media (min-width: 600px) {
    .grid_5 {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
      padding: 0;
    }
  }
</style>
